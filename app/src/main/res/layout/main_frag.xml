<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <EditText
        android:hint="enter words ..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="First Fragment"
        android:id="@+id/first_frag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="Second Fragment"
        android:id="@+id/second_frag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="Third Fragment"
        android:id="@+id/third_frag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="Fourth Fragment"
        android:id="@+id/fourth_frag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="Fifth Fragment"
        android:id="@+id/fifth_frag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>